# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database
# Note: Using postgres superuser to avoid Prisma 4.x + PostgreSQL permission issues
# In production, create a dedicated user with proper permissions
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tsuite_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
